<Page
    x:Class="MultiplePageApp.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:MultiplePageApp"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <Button
            x:Name="PlayButton"
            Content="Play"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            Click="PlayButton_Click" Margin="179,164,414,164"
            />
        <Button
            x:Name="HighScoreButton"
            Content="HighScore"
            HorizontalAlignment="Center"
            VerticalAlignment="Bottom"
            Click="HighScoreButton_Click" 
            Margin="515,0,36,164"
            />
        <TextBox x:Name="FirstNameTextBox" 
        	HorizontalAlignment="Left" 
            VerticalAlignment="Center"
        	TextWrapping="Wrap" 
        	Text="" Margin="0,164" Width="148"/>
        <TextBlock x:Name="FirstNameTextBlock" 
                   HorizontalAlignment="Left"
                   VerticalAlignment="Center"
                   TextWrapping="Wrap" 
                   Text="Your FirstName" Margin="0,139,0,201"/>
    </Grid>
</Page>
